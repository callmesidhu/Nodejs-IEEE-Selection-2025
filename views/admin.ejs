<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/admin.css">
</head>
<body>
    <div class="admin-dashboard-container">
        <h2>Admin Dashboard</h2>
        <% 
            // Dummy data defined directly in the EJS template
            const managers = [
                {
                    managerName: "John Doe",
                    teams: [
                        {
                            teamName: "Dev Team",
                            leader: "john_doe",
                            employee1: "jane_doe",
                            employee2: "alice_smith"
                        },
                        {
                            teamName: "QA Team",
                            leader: "john_doe",
                            employee1: "bob_jones",
                            employee2: "charlie_brown"
                        }
                    ]
                },
                {
                    managerName: "Emma Watson",
                    teams: [
                        {
                            teamName: "Design Team",
                            leader: "emma_watson",
                            employee1: "frank_sinatra",
                            employee2: "grace_hopper"
                        },
                        {
                            teamName: "Marketing Team",
                            leader: "emma_watson",
                            employee1: "diana_ross",
                            employee2: "alice_smith"
                        }
                    ]
                }
            ];

            // Loop through each manager
            managers.forEach((manager) => {
        %>
            <div class="manager-section">
                <h3>Manager: <%= manager.managerName %></h3>
                <table>
                    <thead>
                        <tr>
                            <th>Team Name</th>
                            <th>Leader</th>
                            <th>Employee 1</th>
                            <th>Employee 2</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                            // Loop through each team under the manager
                            manager.teams.forEach((team) => {
                        %>
                            <tr>
                                <td><%= team.teamName %></td>
                                <td><%= team.leader %></td>
                                <td><%= team.employee1 %></td>
                                <td><%= team.employee2 %></td>
                                <td>
                                    <button class="approve-btn" onclick="handleAction('<%= team.teamName %>', 'approve')">Approve</button>
                                    <button class="reject-btn" onclick="handleAction('<%= team.teamName %>', 'reject')">Reject</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% }) %>
    </div>

    <script>
        function handleAction(teamName, action) {
            alert(`Team: ${teamName} - Action: ${action}`);
            // You can add AJAX/fetch logic here to send the action to the server
        }
    </script>
</body>
</html>