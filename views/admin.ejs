<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/admin.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="admin-dashboard-container">
        <h2>Admin Dashboard</h2>

        <!-- Approved Meetings Section -->
        <h3>Approved by Team Manager</h3>
        <table>
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Subject</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% meetings.forEach(meeting => { %>
                    <% if (meeting.manager_approve === 1) { %>
                        <tr>
                            <td><%= meeting.fullname %></td>
                            <td><%= meeting.date %></td>
                            <td><%= meeting.time %></td>
                            <td><%= meeting.meeting_title %></td>
                            <td>
                                <button class="approve-btn" onclick="handleAction('<%= meeting.name %>', 'approve')">Approve</button>
                                <button class="reject-btn" onclick="handleAction('<%= meeting.name %>', 'reject')">Reject</button>
                            </td>
                        </tr>
                    <% } %>
                <% }) %>
            </tbody>
        </table>

        <!-- Rejected Meetings Section -->
        <h3>Rejected by Team Manager</h3>
        <table>
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Subject</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% meetings.forEach(meeting => { %>
                    <% if (meeting.manager_approve === 0) { %>
                        <tr>
                            <td><%= meeting.fullname %></td>
                            <td><%= meeting.date %></td>
                            <td><%= meeting.time %></td>
                            <td><%= meeting.meeting_title %></td>
                            
                        </tr>
                    <% } %>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        function handleAction(employeeName, action) {
            alert(`Employee: ${employeeName} - Action: ${action}`);
            // You can add AJAX/fetch logic here to send the action to the server
        }
    </script>
</body>
</html>