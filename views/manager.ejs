<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeting Requests</title>
    <link rel="stylesheet" href="/stylesheets/manager.css">
</head>
<body>
    
    <%- include('partials/navbar') %>

    <div class="meeting-management-container">
        <h2>Meeting Requests</h2>
        
        <table>
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% meetings.forEach(meeting => { %>
                    <tr>
                        <td><%= meeting.fullname %></td>
                        <td><%= meeting.email %></td>
                        <td><%= meeting.meeting_title %></td>
                        <td><%= meeting.date %></td>
                        <td><%= meeting.time %></td>
                        <td><%= meeting.description %></td>
                        <td>
                            <button class="approve-btn" onclick="handleAction('<%= meeting.fullname %>', 'approve')">Approve</button>
                            <button class="reject-btn" onclick="handleAction('<%= meeting.fullname %>', 'reject')">Reject</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script>
        function handleAction(employeeName, action) {
            alert(`Meeting request by: ${employeeName} - Action: ${action}`);

            // Send action to the server via Fetch API
            fetch('/manager/meeting-action', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ employeeName, action })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(`Meeting request ${action}d successfully.`);
                    location.reload(); // Refresh page to update UI
                } else {
                    alert('Error processing request.');
                }
            })
            .catch(error => console.error('Error:', error));
        }
    </script>

</body>
</html>
